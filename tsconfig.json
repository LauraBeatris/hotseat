{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dir",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "src",
    "paths": {
      "@domains/*": ["domains/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@constants/*": ["constants/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}
